{
  "name": "herbchain",
  "private": true,
  "version": "0.1.0",
  "description": "HerbChain monorepo: Farmer, Consumer, Admin apps + Backend + Shared packages",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
